# for mutt to view html e-mails
text/html;html2txt %s; copiousoutput
image/*;                       eog %s; edit=gimp %s; test=RunningX;
application/pdf;               evince -q %s; test=RunningX;
application/x-pdf;               evince -q %s; test=RunningX;
application/ms-tnef;           tnef -t %s && read ans;
application/msword;            libreoffice %s; test=RunningX;
application/msword;            antiword %s | more;
